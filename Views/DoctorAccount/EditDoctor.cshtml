
@model Project.ViewModels.DoctorProfileEditViewModel

<form asp-action="SaveEdit" method="post">
    <div>
        <label for="Name">Name</label>
        <input type="text" id="Name" name="Name" value="@Model.Name" />
    </div>
    <div>
        <label for="Email">Email</label>
        <input type="email" id="Email" name="Email" value="@Model.Email" />
    </div>
    <div>
        <label for="PhoneNumber">Phone Number</label>
        <input type="text" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" />
    </div>
    <div>
        <label for="Bio">Bio</label>
        <textarea id="Bio" name="Bio">@Model.Bio</textarea>
    </div>
    <div>
        <label for="Gender">Gender</label>
        <input type="text" id="Gender" name="Gender" value="@Model.Gender" />
    </div>
    <div>
        <label for="LicenseNumber">License Number</label>
        <input type="text" id="LicenseNumber" name="LicenseNumber" value="@Model.LicenseNumber" />
    </div>
    <div>
        <label for="SpecializationName">Specialization</label>
        <input type="text" id="SpecializationName" name="SpecializationName" value="@Model.SpecializationName" disabled />
    </div>
    <div>
        <label for="ClinicName">Clinic Name</label>
        <input type="text" id="ClinicName" name="ClinicName" value="@Model.ClinicName" />
    </div>
    <div>
        <label for="ClinicPrice">Clinic Price</label>
        <input type="text" id="ClinicPrice" name="ClinicPrice" value="@Model.ClinicPrice" />
    </div>
    <button type="submit">Save Changes</button>
</form>

